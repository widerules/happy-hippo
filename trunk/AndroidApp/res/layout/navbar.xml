<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<Button android:id="@+id/btGames" android:layout_height="wrap_content"
		android:text="GAMES" android:layout_weight="1" android:layout_width="0dp"
		android:layout_gravity="bottom" style="@style/navbar_bt"/>

	<Button android:id="@+id/btFriends" android:layout_height="wrap_content"
		android:text="FRIENDS" android:layout_weight="1" android:layout_width="0dp"
		android:layout_gravity="bottom" style="@style/navbar_bt"/>
	<Button android:id="@+id/btScores" android:layout_height="wrap_content"
		android:text="SCORES" android:layout_weight="1" android:layout_width="0dp"
		android:layout_gravity="bottom" style="@style/navbar_bt"/>
	<Button android:id="@+id/btHistory" android:layout_height="wrap_content"
		android:text="HISTORY" android:layout_weight="1" android:layout_width="0dp"
		android:layout_gravity="bottom" style="@style/navbar_bt"/>
</LinearLayout>